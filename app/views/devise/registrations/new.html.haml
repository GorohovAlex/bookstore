%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('.sign_up')
    = render 'devise/partials/social_buttons'
    %p.general-login-text
      = t('.or')
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: 'general-form'}) do |f|
    .form-group.mb-30
      = f.input :email, label_html: { class: 'control-label input-label' }, label: t('.email_label'), placeholder: t('.email_placeholder')
    .form-group.mb-30
      = f.input :password, required: false, label_html: { class: 'control-label input-label' }, label: t('.password_label'), placeholder: t('.password_placeholder')
    .form-group.mb-30
      = f.input :password_confirmation, label_html: { class: 'control-label input-label' }, label: t('.confirm_password_label'), placeholder: t('.confirm_password_label')
    .text-center
      = f.submit t('.sign_up'), class: 'btn btn-default mb-20', id: 'sign_up'
