%main.container
  = link_to url_for(:back), class: 'general-back-link' do
    %i.fa.fa-long-arrow-left.mr-15
    = t('.back_to_results')
  .row
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive{src: @book.main_cover_url}
        .images.clearfix
          - @book.covers.drop(1).each do |cover|
            %a.img-link{ href: '#' }
              %img{ src: cover.image_url(:small) }
    .col-sm-6
      %h1.mt-res-0
        = @book.name
      %p.lead.small
        = @book.authors_show
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10
            = @book.price_show
        .col-xs-5.col-md-3
          .input-group.general-position
            %a.input-link{href: "#", id:"quantity-minus"}
              %i.fa.fa-minus.line-height-40
            %input.form-control.quantity-input{type: "text", id:"quantity-value", value: "1"}
            %a.input-link{href: "#", id:"quantity-plus"}
              %i.fa.fa-plus.line-height-40
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position
            = t('add_to_cart')
      .general-info-wrap.divider-lg
        %p
          = t('.description')
        %p.lead.small.line-height-2
          - if @book.description.size <= Book::DESCRIPTION_SHORT_LENGTH
            = @book.description
          - else
            = render partial: 'partials/book_description'
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t('.year_of_publication')
          %p.lead.small.pull-right
            = @book.year_of_publication 
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t('.dimensions')
          %p.lead.small.pull-right
            = t('.dimension_line', height: @book.book_dimension.height, width: @book.book_dimension.width, depth: @book.book_dimension.depth)
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t('.materials')
          %p.lead.small.pull-right
            = @book.materials_show
  .mb-80
    = render partial: 'partials/reviews_write'
  .mb-80
    = render partial: 'partials/reviews_list'
= javascript_pack_tag 'books/show'
