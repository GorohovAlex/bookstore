%main.container
  = link_to :back, class: 'general-back-link' do
    %i.fa.fa-long-arrow-left.mr-15
    = t('back_to_results')
  .row
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
        .images.clearfix
          %a.img-link{href: "#"}
            %img{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
          %a.img-link{href: "#"}
            %img{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
          %a.img-link{href: "#"}
            %img{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
    .col-sm-6
      %h1.mt-res-0
        = @book.name
      %p.lead.small
        = @book.authors_show
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10
            = @book.price_show
        .col-xs-5.col-md-3
          .input-group.general-position
            %a.input-link{href: "#"}
              %i.fa.fa-minus.line-height-40
            %input.form-control.quantity-input{type: "text"}
            %a.input-link{href: "#"}
              %i.fa.fa-plus.line-height-40
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position
            = t('add_to_cart')
      .general-info-wrap.divider-lg
        %p
          = t('description')
        %p.lead.small.line-height-2
          = @book.description
          %a.in-gold-500.ml-10{href: "#"}
            = t('read_more')
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t('year_of_publication')
          %p.lead.small.pull-right 2016
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t('dimensions')
          %p.lead.small.pull-right
            H:6.4\" x W: 0.9\" x D: 5.0
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t('materials')
          %p.lead.small.pull-right
            = @book.materials_show
  .mb-80
    = render partial: 'partials/reviews_write'
  .mb-80
    = render partial: 'partials/reviews_list'