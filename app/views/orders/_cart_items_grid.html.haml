- cart_items_grid.each do |order|
  .general-cart-item.divider-lg-bottom.pt-0
    %table.table
      %tr
        %td.col-half
          %span.in-grey-600
            = t('.number')
        %td.col-half
          = link_to order.number, user_order_path(order), class: 'general-order-number'
      %tr
        %td
          %span.in-grey-600
            = t('.completed_at')
        %td
          %span.in-grey-900.font-16.fw-300
            = l order.created_at, format: :short
      %tr
        %td
          %span.in-grey-600
            = t('.status')
        %td
          %span.font-16.in-grey-900.fw-300
            = t("orders.status.#{order.aasm_state}")
      %tr
        %td
          %span.in-grey-600
            = t('.total')
        %td
          %strong.font-16
            = order.decorate.order_summary
