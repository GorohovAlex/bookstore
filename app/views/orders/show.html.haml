%main.container.general-main-wrap
  %h1.general-title-margin
    = t('.order_with_number', number: @order.number)
  .row.mb-20
    .col-sm-3
      = render partial: 'checkouts/confirm_info_box', locals: { label: t('.shipping_address'), items: @presenter.shipping_address_info_items, state: nil }
    .col-sm-3
      = render partial: 'checkouts/confirm_info_box', locals: { label: t('.billing_address'), items: @presenter.billing_address_info_items, state: nil }
    .col-sm-3
      = render partial: 'checkouts/confirm_info_box', locals: { label: t('.shipments'), items: @presenter.shipments_info_items, state: nil }
    .col-sm-3
      = render partial: 'checkouts/confirm_info_box', locals: { label: t('.payment_information'), items: @presenter.payment_info_items, state: nil }
  .visible-xs
    = render partial: 'cart_items/cart_item_grid', collection: @presenter.cart_items, locals: { editable: false }
  .hidden-xs
    = render partial: 'cart_items/cart_item_table', object: @presenter.cart_items, locals: { editable: false }
  .text-center.general-text-right
    = render partial: 'checkouts/order_summary', locals: { order_summary_items: @presenter.summary_items.summary, html: { class: 'general-summary-table-right general-text-right' } }
