%main.container
  = alert
  %h1.general-title-margin
    = t('settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}
        = t('.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab", id:'privacy-tab-link'}
        = t('.privacy')
  .tab-content
    #address.tab-pane.fade.in.active{role: "tabpanel"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0
              = t('.billing_address')
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0
              = t('.shipping_address')
      .row
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0
              = t('.billing_address')
          = render partial: 'address_form', locals: {address: @billing_address_form || Users::BillingAddressForm.new(id: current_user.billing_address&.id) }
        .col-md-5.col-md-offset-1.mb-25
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0
              = t('.shipping_address')
          = render partial: 'address_form', locals: {address: @shipping_address_form || Users::ShippingAddressForm.new(id: current_user.shipping_address&.id) }
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        .col-sm-5
          %p.in-gold-500.font-18.mb-25
            = t('.email_caption')
          = render 'email_form'
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25
            = t('.password_caption')
          = render 'password_form'
        .col-sm-12
          = render 'remove_account_form'
