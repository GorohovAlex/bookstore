%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand
        = t('site_name')
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to(t('home'), root_path)
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"}
              = t('shop')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              - Categories::CategoriesAll.call.each do |category_item|
                %li
                  = link_to(category_item.name, catalog_path(category_id: category_item.id), class: 'collapse-link')
          %li
            %a{href: "#"}= t('my_account')
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to(t('home'), root_path)
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
              = t('shop')
            %ul.dropdown-menu
              - Categories::CategoriesAll.call.each do |category_item|
                %li
                  = link_to(category_item.name, catalog_path(category_id: category_item.id), class: 'collapse-link')
              %li.divider{role: "separator"}
              %li
                %a{href: "#"}= t('log_out')
          %li
            %a{href: "#"}= t('my_account')