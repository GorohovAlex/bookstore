.col-sm-6.col-md-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      = image_tag book_item.main_cover_url, class: 'img img-shadow general-thumbnail-img', alt: 'design-book'
      .thumb-hover
        .general-thumb-link-wrap
          = link_to(book_path(book_item), class: 'thumb-hover-link') do
            %i.fa.fa-eye.thumb-icon{ 'aria-hidden': 'true' }
          = link_to cart_items_path( 'cart_item[book_id]': book_item.id ), remote: true, class: 'thumb-hover-link shopping-cart', method: 'post' do          
            %i.fa.fa-shopping-cart.thumb-icon
  .mb-35
    .clearfix
      %p.pull-right.font-16.in-gold-500
        = book_item.price_show
      %p.title.mr-55
        = book_item.name
    %span.divider-sm
    %p.lead.small
      = book_item.authors_show
