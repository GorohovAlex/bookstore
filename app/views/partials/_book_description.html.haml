= @book.description_begin
%span{id:"dots"}...
%span{id:"more", style:"display:none"}
  = @book.description_end
%a.in-gold-500.ml-10{href:"", onclick:"ReadMoreLess()", id:"read_more"}
  = t('books.show.read_more')

:javascript
  function ReadMoreLess() {
    event.preventDefault()

    var dots = document.getElementById("dots");
    var moreText = document.getElementById("more");
    var btnText = document.getElementById("read_more");

    if (dots.style.display === "none") {
      dots.style.display = "inline";
      btnText.innerHTML = "#{t('books.show.read_more')}";
      moreText.style.display = "none";
    } else {
      dots.style.display = "none";
      btnText.innerHTML = "#{t('books.show.read_less')}";
      moreText.style.display = "inline";
    }
  }