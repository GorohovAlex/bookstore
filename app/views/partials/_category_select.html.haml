.dropdown
  %a.dropdown-toggle.lead.small{ href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false" }
    = params[:category_id].nil? ? t('all') : Category.find(params[:category_id]).name
    %i.fa.fa-angle-down.dropdown-icon.pull-right
  %ul.dropdown-menu
    = render partial: 'partials/category_select_item', collection: items
