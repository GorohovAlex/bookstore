%tr
  %td
    .general-img-wrap-table
      = link_to url_for(cart_item_line.book) do
        = image_tag 'http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg', alt: 'design-book', class: 'cart-img-shadow pull-left'
  %td
    %p.title
      = link_to cart_item_line.book.name, url_for(cart_item_line.book)
  %td
    %span.font-16.in-gold-500
      = cart_item_line.book.decorate.price_show
  %td
    -# = render partial: 'partials/counter', locals: { f: f, quantity: cart_item_line.quantity }
    .input-group
      = simple_form_for cart_item_line, method: 'PATCH', remote: true, authenticity_token: true do |f|
        %a.input-link.quantity-minus{ href: '#' }
          %i.fa.fa-minus.line-height-40
        = f.input_field :quantity, class: 'form-control quantity-input', value: cart_item_line.quantity, as: :string, id: nil
        %a.input-link.quantity-plus{ href: '#' }
          %i.fa.fa-plus.line-height-40
  %td
    %span.font-16.in-gold-500
      = humanized_money_with_symbol cart_item_line.quantity * cart_item_line.book.price
  %td
    = button_to cart_item_path(cart_item_line.id), method: 'delete', remote: true, class: 'close general-cart-close' do
      %span{'aria-hidden': 'true'} &times;
    -# %button.close.general-cart-close{ type: 'button', 'aria-label': 'Close' }
      %span{'aria-hidden': 'true'} &times;

