%main.container
  = render partial: 'checkout_header'
  = simple_form_for @current_order, url: checkout_path, method: 'PATCH' do |f|
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle
            = t('.billing_address')
          %p.general-info-text all fields are required
        .col-md-5.col-md-offset-1
          %h3.general-subtitle
            = t('.shipping_address')
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle
            = t('.billing_address')
          %p.general-info-text all fields are required
        = f.simple_fields_for @presenter.billing_address_form do |a|
          = render partial: 'partials/address_form_fields', locals: { f: a }
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle
            = t('.shipping_address')
        = f.simple_fields_for @presenter.shipping_address_form, defaults: { input_html: { class: 'default_class' } } do |a|
          = render partial: 'partials/address_form_fields', locals: { f: a }
        .form-group.checkbox
          %label.checkbox-label
            %input.checkbox-input{ type: "checkbox", hidden: "true "}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Use Billing Adress
    .general-text-align.mb-60
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Item Total:
          %td
            %p.font-16 €117.69
        %tr
          %td
            %p.font-16 Order Total:
          %td
            %p.font-16 €117.69
      = f.submit 'Save and Continue', class: 'btn center-block mb-20'
=console
