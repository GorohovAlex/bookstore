.text-center.mb-40
  %h3.general-subtitle
    = t('.thank_message')
  %p.fw-300
    = t('.thank_description', user: current_user.name, email: current_user.email)
.row.mb-20
  .col-sm-6
    .visible-xs
      %p.general-order-number.mb-0
        = t('.order_number', number: @presenter.owner.number)
      %p.general-address.mb-30
        = l @presenter.owner.created_at, format: :checkout
    = render partial: 'confirm_info_box', locals: { label: nil, items: @presenter.shipping_address_info_items, state: nil }
  .col-sm-6.hidden-xs.text-right
    %p.general-order-number.mb-0
      = t('.order_number', number: @presenter.owner.number)
    %p.general-address.mb-30
      = l @presenter.owner.created_at, format: :checkout
.visible-xs
  = render partial: 'cart_items/cart_item_grid', collection: @presenter.order_items, locals: { editable: false }
.hidden-xs
  = render partial: 'cart_items/cart_item_table', object: @presenter.order_items, locals: { editable: false }  
.text-center.general-text-right
  = render partial: 'order_summary', locals: { order_summary_items: @presenter.summary_items.summary, html: { class: 'general-summary-table-right general-text-right' } }
.text-center
  %button.btn.btn-default.mb-20
    = t('.back_to_store')
