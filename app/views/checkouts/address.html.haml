%main.container
  = render partial: 'checkout_header', locals: { state: @current_order.aasm_state }
  = simple_form_for @current_order, url: checkout_path, method: 'PATCH' do |f|
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle
            = t('.billing_address')
          %p.general-info-text
            = t('.all_fields_are_required')
        .col-md-5.col-md-offset-1
          %h3.general-subtitle
            = t('.shipping_address')
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle
            = t('.billing_address')
          %p.general-info-text
            = t('.all_fields_are_required')
        = f.simple_fields_for @presenter.billing_address_form do |a|
          = render partial: 'partials/address_form_fields', locals: { f: a }
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle
            = t('.shipping_address')
        #shipping_address_box
          = f.simple_fields_for @presenter.shipping_address_form, defaults: { input_html: { class: 'default_class' } } do |a|
            = render partial: 'partials/address_form_fields', locals: { f: a }
        .form-group.checkbox
          %label.checkbox-label
            = f.input_field :use_billing_address, as: :boolean, class: 'checkbox-input', style: 'display: none'
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text
              = t('.use_billing_address')
    .general-text-align.mb-60
      = render partial: 'order_summary', locals: { order_summary_items: @summary_presenter.order_summary }
      = f.submit t('.save_and_continue'), class: 'btn center-block mb-20'
= javascript_pack_tag 'checkouts/address'
